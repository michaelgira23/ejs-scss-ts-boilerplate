{
  "name": "ejs-scss-ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating a simple website using EJS, Sass, and Typescript.",
  "main": "server.js",
  "scripts": {
    "start": "parcel ./src/pages/**/*.ejs",
    "test": "npm run lint",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "npm run clean && parcel build ./src/pages/**/*.ejs",
    "clean": "rimraf dist/* && rimraf .cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelgira23/ejs-scss-ts-boilerplate.git"
  },
  "keywords": [
    "ejs",
    "scss",
    "sass",
    "ts",
    "typescript",
    "boilerplate"
  ],
  "author": "Michael Gira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaelgira23/ejs-scss-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/michaelgira23/ejs-scss-ts-boilerplate#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^10.5.2",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.6",
    "parcel-plugin-ejs": "^0.1.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
